<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SurfaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="684dp"
        android:orientation="horizontal">

        <g313.gusev.lab09.MySurface
            android:id="@+id/mySurface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="btnBackClick"
            android:text="Вернуться назад" />

        <Button
            android:id="@+id/btnScaleMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnScaleMinus"
            android:text="-" />

        <Button
            android:id="@+id/btnScalePlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnScalePlus"
            android:text="+" />
    </LinearLayout>

</LinearLayout>